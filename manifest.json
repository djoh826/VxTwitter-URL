{
  "manifest_version": 3,
  "name": "VxTwitter URL",
  "version": "1.1",

  "description": "Converts twitter.com URLs  to VXTwitter URLS when copying them.",

  "icons": {
    "96": "icon-96.png",
    "48": "icon-48.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tweetdeck.com/*"
      ],
      "js": ["app.js"]
    }
  ],

  "permissions": ["clipboardRead", "clipboardWrite"]
}
